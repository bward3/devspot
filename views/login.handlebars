<section class="section">
  <div class="container has-text-centered">
    <figure class="image is-128x128 is-inline-block">
      <img class="is-rounded" src="./images/DevSpot-logos-modified.png" />
    </figure>
  </div>
</section>

<div class="columns is-centered">
  <div class="column is-4 pr-6 login-form">

    <div class="field">
      <label for="user-login" class="label">Username</label>
      <div class="control">
        <input
          class="input"
          type="text"
          placeholder="Username"
          id="user-login"
        />
      </div>
    </div>

    <div class="field">
      <label for="password-login" class="label">Password
      </label>
      <div class="control">
        <input
          class="input"
          type="password"
          placeholder="Password"
          id="password-login"
        />
      </div>
    </div>
    <div class="field">
      <p class="control">
        <button
          class="button"
          type="submit"
          id="loginBtn"
          style="background-color: #9F2B00; color: white"
        >
          Login
        </button>
      </p>
    </div>
  </div>
  <div class="column is-4 pl-6 signup-form">

    <div class="field">
      <label for="name-signup" class="label">Username</label>
      <div class="control">
        <input class="input" type="text" placeholder="Name" id="name-signup" />
      </div>
    </div>

    <div class="field">
      <label for="email-signup" class="label">Email
      </label>
      <div class="control">
        <input
          class="input"
          type="text"
          placeholder="Email"
          id="email-signup"
        />
      </div>
    </div>
    <div class="field">
      <label for="password-signup" class="label">Password</label>
      <div class="control">
        <input
          class="input"
          type="password"
          placeholder="Password"
          id="password-signup"
        />
      </div>
    </div>
    <div class="field">
      <p class="control">
        <button
          class="button"
          type="submit"
          id="signupBtn"
          style="background-color: #9F2B00; color: white"
        >
          Sign Up
        </button>
      </p>
    </div>
  </div>
</div>

<script src="./js/login.js"></script>